---
import "../styles/global.css";
import Sidebar from "../components/Sidebar.astro";

interface Props {
	title: string;
}

const { title } = Astro.props;
---

<script>
	import Alpine from "alpinejs";
	import { i18nPlugin } from "../i18n";
	import storePlugin from "../lib/store";

	document.addEventListener("alpine:init", () => {
		i18nPlugin(Alpine);
		storePlugin(Alpine);
		// Initialize store
		Alpine.store("bot").init();
	});
</script>

<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content="Sentinel Bot Orchestrator" />
		<meta name="viewport" content="width=device-width" />
		<meta name="generator" content={Astro.generator} />
		<title>{title} | Sentinel</title>
	</head>
	<body
		class="selection:bg-brand-purple selection:text-white relative bg-slate-950 min-h-screen text-slate-200 font-mono antialiased overflow-x-hidden"
	>
		<!-- Sidebar -->
		<Sidebar />

		<!-- Main Content Wrapper -->
		<div
			class="ml-16 md:ml-64 min-h-screen transition-all duration-300 relative z-10"
		>
			<!-- Ambient Glow -->
			<div
				class="fixed top-0 left-0 w-full h-96 bg-brand-purple/5 blur-[120px] pointer-events-none -z-10"
			>
			</div>

			<main class="p-4 md:p-8 max-w-7xl mx-auto">
				<slot />
			</main>
		</div>
	</body>
</html>
